@model AspCore.Areas.Notebook.ViewModels.PersonViewModel

<form asp-action="GetPersonsAction" method="get">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonFilter.Surname" class="control-label"></label>
                <input asp-for="PersonFilter.Surname" class="form-control" />
                <span asp-validation-for="PersonFilter.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonFilter.Name" class="control-label"></label>
                <input asp-for="PersonFilter.Name" class="form-control" />
                <span asp-validation-for="PersonFilter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonFilter.Patronymic" class="control-label"></label>
                <input asp-for="PersonFilter.Patronymic" class="form-control" />
                <span asp-validation-for="PersonFilter.Patronymic" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonFilter.DateOfBirth.FromDateTime" class="control-label"></label>
                <input asp-for="PersonFilter.DateOfBirth.FromDateTime" class="form-control" />
                <span asp-validation-for="PersonFilter.DateOfBirth.FromDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonFilter.DateOfBirth.ToDateTime" class="control-label"></label>
                <input asp-for="PersonFilter.DateOfBirth.ToDateTime" class="form-control" />
                <span asp-validation-for="PersonFilter.DateOfBirth.ToDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonFilter.Organization" class="control-label"></label>
                <input asp-for="PersonFilter.Organization" class="form-control" />
                <span asp-validation-for="PersonFilter.Organization" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonFilter.Email" class="control-label"></label>
                <input asp-for="PersonFilter.Email" class="form-control" />
                <span asp-validation-for="PersonFilter.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonFilter.PhoneNumbers" class="control-label"></label>
                <input asp-for="PersonFilter.PhoneNumbers" class="form-control" />
                <span asp-validation-for="PersonFilter.PhoneNumbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonFilter.SkypeLogin" class="control-label"></label>
                <input asp-for="PersonFilter.SkypeLogin" class="form-control" />
                <span asp-validation-for="PersonFilter.SkypeLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Person.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.Patronymic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.Organization)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Persons)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patronymic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organization)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
